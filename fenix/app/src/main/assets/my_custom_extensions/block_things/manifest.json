{
    "manifest_version": 2,
    "name": "block_things",
    "version": "1.0",
  
    "description": "Blocks images on all pages",
    "permissions": [
        "<all_urls>",
        "webRequest",
        "webRequestBlocking"
      ],
    "background": {
        "scripts": ["block_things.js"],
        "persistent": true,
        "type": "module"
      },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "exclude_matches": ["*://*.jackbox.tv/*"],
            "js": ["remove_things.js"],
            "run_at": "document_end"
        }
    ],
    "browser_specific_settings": {
        "gecko_android": {
            "id": "my_own_cool_id@austin.com",
            "strict_min_version": "42.0"
        },
        "gecko": {
            "id": "my_own_cool_id@austin.com",
            "strict_min_version": "42.0"
        }
      }
      
}
